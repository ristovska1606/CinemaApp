@model List<CinemaApp.Domain.DomainModels.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">
        <a class="btn btn-success" asp-action="Create">Insert New Movie</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        @if(i%3 == 0)
        {
            @:<div class="row">
        }

                <div class="col-lg-4 m-2">

                    <div class="card" style="width: 20rem; height: 30rem;">
                        <img class="card-img-top" src="@item.MovieCover" style="height: 50%;" alt="Image for product!">

                        <div class="card-body">
                            <h3 class="card-title">@item.MovieTitle</h3>
                            


                            <h6>Price: @item.TicketPrice ДЕН</h6>
                        </div>

                        <div class="card-footer">
                            <a asp-controller="Products" asp-action="AddProductToCard" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>

                </div>

        @if(i%3 == 2) 
        {
            @:</div>    
        }
    }

</div>