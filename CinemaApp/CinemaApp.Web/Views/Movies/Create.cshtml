@*@model CinemaApp.Domain.DomainModels.Movie*@

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="MovieTitle" class="form-control" />
                <input type="text" name="MovieTitle"/>
            </div>
            <div class="form-group">
                <label for="MovieCover" class="form-control" />
                <input type="text" name="MovieCover" />
            </div>
            <div class="form-group">
                <label for="ValidFrom" class="form-control" />
                <input type="date" name="ValidFrom" />
            </div>
            <div class="form-group">
                <label for="ValidTo" class="form-control" />
                <input type="date" name="ValidTo" />
            </div>
            <div class="form-group">
                <label for="TicketPrice" class="form-control" />
                <input type="text" name="TicketPrice" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
