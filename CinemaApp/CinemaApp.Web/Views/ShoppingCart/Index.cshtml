@model CinemaApp.Domain.DTO.ShoppingCartDto


<div class="container">
    <div class="row">
        <a asp-controller="ShoppingCart" asp-action="OrderNow" class="btn btn-success">Order now</a>
    </div>

    <div class="row" style="margin-top:20px;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ticket id</th>
                    <th scope="col">Movie</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Ticket.Count; i++)
                {
                    var currentTicket = Model.Ticket[i];

                    <tr>
                        <td>@(i+1)</td>
                        <td>@currentTicket.Ticket.Id</td>
                        <td>@currentTicket.Ticket.Movie</td>
                        <td>
                            <a asp-controller="ShoppingCart" asp-action="Delete" asp-route-id="@currentTicket.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th scope="col">Total Price:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice $</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>